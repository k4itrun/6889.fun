{
  "compilerOptions": {
    "lib": ["DOM", "DOM.iterable", "ES2022"],
    "target": "ES2022",
    "module": "ESNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "incremental": true,
    "noUncheckedIndexedAccess": true,
    "checkJs": true,
    "noEmit": true,
    "moduleResolution": "Bundler",
    "moduleDetection": "force",
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@9ll-fun/*": ["./config/*"]
    }
  },
  "include": ["src/**/*", ".next/types/**/*", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
